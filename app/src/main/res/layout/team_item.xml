<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_team"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="팀 이름"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/iv_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_profile"
                tools:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:background="@color/common_point_grey"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedShape" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="전남"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/tv_team_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_team_name" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="광양시"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_area"
                app:layout_constraintStart_toEndOf="@+id/tv_area"
                app:layout_constraintTop_toTopOf="@+id/tv_area" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="남성팀"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_location"
                app:layout_constraintStart_toEndOf="@+id/tv_location"
                app:layout_constraintTop_toTopOf="@+id/tv_location" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="20-30대"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_gender"
                app:layout_constraintStart_toEndOf="@+id/tv_gender"
                app:layout_constraintTop_toTopOf="@+id/tv_gender" />

            <TextView
                android:id="@+id/tv_manner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="매너점수"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/tv_area"
                app:layout_constraintTop_toBottomOf="@+id/tv_area" />

            <TextView
                android:id="@+id/tv_manner_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="4.5"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_manner"
                app:layout_constraintStart_toEndOf="@+id/tv_manner"
                app:layout_constraintTop_toTopOf="@+id/tv_manner" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="선수"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_manner_score"
                app:layout_constraintStart_toEndOf="@+id/tv_manner_score"
                app:layout_constraintTop_toTopOf="@+id/tv_manner_score" />

            <TextView
                android:id="@+id/tv_team_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="28명"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_team"
                app:layout_constraintStart_toEndOf="@+id/tv_team"
                app:layout_constraintTop_toTopOf="@+id/tv_team" />

            <TextView
                android:id="@+id/tv_president"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="회장"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_team_members"
                app:layout_constraintStart_toEndOf="@+id/tv_team_members"
                app:layout_constraintTop_toTopOf="@+id/tv_team_members" />

            <TextView
                android:id="@+id/tv_president_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="추민수"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_president"
                app:layout_constraintStart_toEndOf="@+id/tv_president"
                app:layout_constraintTop_toTopOf="@+id/tv_president" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>