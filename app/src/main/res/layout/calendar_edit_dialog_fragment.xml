<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheet_background">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/divider2"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="@color/common_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider3"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/common_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/material_calendar_calendar_edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:mcv_monthLabels="@array/custom_month_labels"
            app:mcv_headerTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintTop_toTopOf="@+id/cl_calendar_add_dialog_fragment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_calendar_edit_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_calendar_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/edt_calendar_edit_place"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="@string/calendar_edit_dialog_fragment_location"
                android:background="@drawable/et_common_background_grey"                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@+id/iv_calendar_edit_location"
                app:layout_constraintTop_toBottomOf="@+id/iv_calendar_edit_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/calendar_edit_dialog_fragment_location_title"
                android:textSize="18sp"
                android:fontFamily="@font/pretendardbold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_calendar_edit_location"
                app:layout_constraintStart_toEndOf="@+id/iv_calendar_edit_location"
                app:layout_constraintTop_toTopOf="@+id/iv_calendar_edit_location" />

            <ImageView
                android:id="@+id/iv_calendar_edit_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_calendar_edit_place"
                tools:layout_editor_absoluteY="429dp" />

            <TextView
                android:id="@+id/tv_calendar_edit_memo_title"
                android:textSize="18sp"
                android:fontFamily="@font/pretendardbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/calendar_edit_dialog_fragment_memo_title" app:layout_constraintBottom_toBottomOf="@+id/iv_calendar_edit_menu"
                app:layout_constraintStart_toEndOf="@+id/iv_calendar_edit_menu"
                app:layout_constraintTop_toTopOf="@+id/iv_calendar_edit_menu" />

            <EditText
                android:id="@+id/edt_calendar_edit_memo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_common_background_grey"                android:hint="메모 할 내용을 입력해주세요."
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/iv_calendar_edit_menu"
                app:layout_constraintTop_toBottomOf="@+id/iv_calendar_edit_menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">


        <Button
            android:id="@+id/btn_calendar_edit_cancel"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/common_grey"
            android:text="@string/calendar_edit_dialog_fragment_memo_btn_cancel"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <Button
            android:id="@+id/btn_calendar_edit_save"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/common_point_green"
            android:text="@string/calendar_edit_dialog_fragment_memo_btn_save"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>