<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gradient_background"
    tools:context=".ui.home.arena.ArenaActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:background="@color/common_transparent"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arena_title"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_filter"
        android:text="@string/arena_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_futsal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_futsal"
        android:text="@string/arena_futsal"
        android:textSize="15sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_soccer"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_soccer"
        android:text="@string/arena_soccer"
        android:textSize="15sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/btn_bowling"
        app:layout_constraintBottom_toBottomOf="@id/btn_futsal"
        app:layout_constraintStart_toEndOf="@id/btn_futsal"
        app:layout_constraintTop_toTopOf="@id/btn_futsal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bowling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_bowling"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/btn_basketball"
        android:text="@string/arena_bowling"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_futsal"
        app:layout_constraintStart_toEndOf="@id/btn_soccer"
        app:layout_constraintTop_toTopOf="@id/btn_futsal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_basketball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/btn_badminton"
        android:drawableStart="@drawable/ic_basketball"
        android:text="@string/arena_basketball"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_futsal"
        app:layout_constraintStart_toEndOf="@id/btn_bowling"
        app:layout_constraintTop_toTopOf="@id/btn_futsal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_badminton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_badminton"
        android:text="@string/arena_badminton"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_futsal"
        app:layout_constraintStart_toEndOf="@id/btn_basketball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_futsal" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_futsal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/arena_recyclerview_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>