<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.signin.SignInFragment">


    <ImageView
        android:id="@+id/iv_singnin_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_runner"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/common_point_green"
        app:layout_constraintStart_toEndOf="@+id/iv_singnin_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_singnin_logo"
        app:layout_constraintBottom_toBottomOf="@+id/iv_singnin_logo"
        />

    <EditText
        android:id="@+id/et_signin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username, email or mobile number"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_singnin_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_signin_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username, email or mobile number"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_signin_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_singin_login"
        android:background="@drawable/match_detail_persistent_bottom_sheet_confirm_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_signin_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_signin_findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="비밀번호를 잊으셨습니까?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_singin_login"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_singin_google"
        android:background="@color/white"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_google_logo"
        android:text="로그인"
        android:textSize="10sp"
        android:textColor="@color/common_point_green"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>